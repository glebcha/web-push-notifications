{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2015",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "es2018", "dom", "WebWorker.ImportScripts"]
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/*"]
}